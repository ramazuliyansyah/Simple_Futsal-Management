<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Booking</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <div class="container">
    <h1>Edit Data Booking</h1>
    <form action="/bookings/<%= booking._id %>?_method=PUT" method="POST">
      <div>
        <label for="field">Lapangan:</label>
        <select id="field" name="field" required>
          <% fields.forEach(field => { %>
            <option value="<%= field._id %>" <%= field._id.equals(booking.field._id) ? 'selected' : '' %>><%= field.name %></option>
          <% }) %>
        </select>
      </div>
      <div>
        <label for="member">Member:</label>
        <select id="member" name="member" required>
          <% members.forEach(member => { %>
            <option value="<%= member._id %>" <%= member._id.equals(booking.member._id) ? 'selected' : '' %>><%= member.name %></option>
          <% }) %>
        </select>
      </div>
      <div>
        <label for="date">Tanggal:</label>
        <input type="date" id="date" name="date" value="<%= booking.date.toISOString().split('T')[0] %>" required>
      </div>
      <div>
        <label for="time">Jam:</label>
        <input type="time" id="time" name="time" value="<%= booking.time %>" required>
      </div>
      <div>
        <label for="hours">Jumlah Jam:</label>
        <input type="number" id="hours" name="hours" value="<%= booking.hours %>" required>
      </div>
      <button type="submit">Simpan</button>
    </form>
  </div>
</body>
</html>
